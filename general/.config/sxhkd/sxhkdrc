# vim: foldmethod=marker foldlevel=0

super + q
    wmctrl -c :ACTIVE:

super + shift + p
    notify-send "Restarted polybar, picom and sxhkd" -t 3000 \
	; polybar-msg cmd restart \
	; /usr/bin/kill -s USR1 sxhkd \
	; /usr/bin/kill -s USR1 picom

super + d
    env SHELL=/bin/sh rofi -show combi -modi combi -combi-modes drun,run -show-icons

super + Tab; w
    env SHELL=/bin/sh rofi -show window -modi window -show-icons

super + w
    passmenu | xargs -r notify-send -t 3000 "Password Copied"

super + shift + w
    as-dialogue --work-dir $HOME/proj/wifi-menu -- poetry run wmenu

# pick a [C]olor
super + b; c
    "$XDG_CONFIG_HOME/polybar/scripts/color-switch.sh"
# toggle [T]ray
super + b; t
    polybar-msg action "#tray.module_toggle"
# toggle [D]ate
super + b; d
    polybar-msg action "#date.toggle"
# [H]ide bar
super + b; h
    polybar-msg cmd toggle

super + shift + b
    "$SCRIPTS/set-bg"

super + e
    $SCRIPTS/pick-emoji

# Most Used Apps {{{

# TERMINAL
#     When $TERMINAL is urxvt and a shell to be run is not passed in the CLI
#     (-e <my-shell>), urxvt will try and use in this order: $SHELL,
#     getpwuid(3) or /bin/sh
super + Return
    "$TERMINAL"

super + a; c
    wmctrl -xa galculator || galculator
super + a; h
    wmctrl -a htop || as-dialogue htop
super + a; w
    wmctrl -xa libreoffice-writer || gtk-launch libreoffice-writer
super + a; m
    wmctrl -a vimpc || as-dialogue vimpc
super + a; p
    wmctrl -xa pavucontrol || pavucontrol
super + a; f
    wmctrl -xa "$FILE_MANAGER" || "$FILE_MANAGER"
super + a; b
    wmctrl -xa "$BROWSER" || "$BROWSER"
# }}}

# System Menu {{{
super + m; l
    i3lock-fancy-rapid 50 10 && xset -display :0.0 dpms force off
super + m; p
    systemctl poweroff
super + m; r
    systemctl reboot
super + m; h
    systemctl hybernate
super + m; s
    systemctl suspend
super + m; g
    dm-tool switch-to-greeter
# }}}

# Fn Buttons {{{
Print
    flameshot gui
shift + Print
    "$SCRIPTS/screenshot"

XF86TouchpadToggle
    toggle-touchpad --notify

shift + XF86TouchpadToggle
    xset -display :0.0 dpms force off

XF86Audio{Play,Next,Prev}
    mpc {toggle,next,prev}

shift + XF86Audio{Raise,Lower}Volume
    mpc seek {+,-}00:00:05

XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

shift + XF86AudioMute
    pkill -USR1 redshift

XF86MonBrightness{Up,Down}
    brightnessctl set 5%{+,-}

shift + XF86MonBrightness{Up,Down}
    brightnessctl set {100,0}%

# }}}

# Notifications {{{
super + n; a
    dunstctl action
super + n; q
    dunstctl close
super + n; shift + q
    dunstctl close-all
super + n; h
    dunstctl history-pop
super + n; shift + h
    dunstctl history-clear
super + n; c
    dunstctl context
super + n; t
    dunstctl {set-paused toggle}
# }}}


# Redshift/brightness {{{
super + r: j
    ; redshiftctl update --temperature_delta -300

super + r: k
    ; redshiftctl update --temperature_delta 300

super + r: h
    ; redshiftctl update --brightness_delta -0.05

super + r: l
    ; redshiftctl update --brightness_delta 0.05

super + r: r
    ; redshiftctl reset

super + r: c
    ; redshiftctl clear

# }}} Redshift/brightness

# PROGRAM SHORTCUTS

super + Return
    $TERMINAL

super + d
    rofi -modi drun,run,window -show-icons -show drun -theme theme.rasi

super + F2
    $BROWSER

super + shift + F2
    priv "$BROWSER"

# Starts file manager at ~
super + F3
    xdg-open ~

# Starts file manager at ~ as sudo
super + shift + F3
    gksu xdg-open ~ || kdsu xdg-open ~

Print
    flameshot gui

shift + Print
    flameshot full -p "$XDG_PICTURES_DIR"

super + p
    pavucontrol

super + shift + p
    polybar-msg cmd restart

super + n
    "$SCRIPTS/plumb-nag"

super + shift + y
    "$SCRIPTS/i3-ytdl"

super + u
    $SCRIPTS/usbeast -m

super + shift + u
    $SCRIPTS/usbeast -u

super + e
    $SCRIPTS/pick-emoji

super + shift + m
    notify-send "System Menu" "(l)ock\nswitch (u)ser\n(e)xit\nsus(p)end\n(h)ybernate\n(r)eboot\n(s)hutdown"

super + m; {l, u, e, p, h, r, s}
    { \
        i3lock-fancy, \
        dm-tool switch-to-greeter, \
        i3-msg logout, \
        systemctl suspend, \
        systemctl hybernate, \
        systemctl reboot, \
        systemctl poweroff \
    }

super + k
    notify-send "Network Error" "No internet connection" -t 3000; llk

super + shift + k
    notify-send "Network Online" "Internet connection found" -t 3000; llkk

XF86Audio{Play,Next,Prev}
    mpc {toggle,next,prev}

XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

XF86MonBrightness{Up,Down}
    brightnessctl set 5%{+,-}

super + apostrophe; {q, a, h, c, t}
    dunstctl {close, close-all, history-pop, context, set-paused toggle}

super + w
    notify-send -t 3000 "Password Copied" (passmenu)

super + shift + w
    networkmanager_dmenu


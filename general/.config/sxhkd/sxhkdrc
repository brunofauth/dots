# vim: foldmethod=marker foldlevel=0

super + q
    wmctrl -c :ACTIVE:

super + d
    rofi -modi drun,run,window -show-icons -show drun -theme theme.rasi

# Most Used Apps {{{
super + F1
    "$TERMINAL"

# Start $BROWSER or switch to it
super + F2
    wmctrl -xa "$BROWSER" \
	|| \{ notify-send "Starting '$BROWSER'" -t 3000 && $BROWSER; \}

# Starts $FILE_MANAGER or switch to it
super + F3
    wmctrl -xa "$FILE_MANAGER" \
	|| \{ notify-send "Starting '$FILE_MANAGER'" "as $USER" -t 3000 && "$FILE_MANAGER"; \}
# }}}

super + a; c
    galculator
super + a; h
    gtk-launch htop
super + a; w
    gtk-launch libreoffice-writer
super + a; m
    gtk-launch vimpc

Print
    flameshot gui

shift + Print
    "$SCRIPTS/screenshot"

super + p
    notify-send "Restarted polybar, picom and sxhkd" -t 3000 \
	&& polybar-msg cmd restart \
	&& /usr/bin/kill -s USR1 sxhkd \
	&& /usr/bin/kill -s USR1 picom

super + shift + p
    "$XDG_CONFIG_HOME/polybar/scripts/color-switch.sh"

super + shift + b
    "$SCRIPTS/set-bg"

super + e
    $SCRIPTS/pick-emoji

# System Menu {{{
super + m; l
    i3lock-fancy && xset -display :0.0 dpms force off
super + m; p
    systemctl poweroff
super + m; r
    systemctl reboot
super + m; h
    systemctl hybernate
super + m; s
    systemctl suspend
super + m; g
    dm-tool switch-to-greeter
# }}}

XF86TouchpadToggle
    toggle-touchpad --notify

shift + XF86TouchpadToggle
    xset -display :0.0 dpms force off

XF86Audio{Play,Next,Prev}
    mpc {toggle,next,prev}

shift + XF86Audio{Raise,Lower}Volume
    mpc seek {+,-}00:00:05

XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

shift + XF86AudioMute
    pkill -USR1 redshift

XF86MonBrightness{Up,Down}
    brightnessctl set 5%{+,-}

shift + XF86MonBrightness{Up,Down}
    brightnessctl set {100,0}%

super + s
    "$SCRIPTS/chaudio" --set-default-sink

super + shift + s
    "$SCRIPTS/chaudio"

# Notifications {{{
super + n; a
    dunstctl action
super + n; q
    dunstctl close
super + n; shift + q
    dunstctl close-all
super + n; h
    dunstctl history-pop
super + n; shift + h
    dunstctl history-clear
super + n; c
    dunstctl context
super + n; t
    dunstctl {set-paused toggle}
# }}}

super + w
    passmenu | xargs -r notify-send -t 3000 "Password Copied"

super + shift + w
    as-dialogue --work-dir $HOME/proj/wifi-menu -- poetry run wmenu

